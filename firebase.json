{
  "hosting": {
    "public": "frontend/out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**/*.@(jpg|jpeg|gif|png|webp|mp4|webm)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      }
    ],
    "cleanUrls": true,
    "trailingSlash": false,
    "rewrites": [
      {
        "source": "/api/getSession",
        "function": {
          "functionId": "getSession",
          "region": "asia-east1"
        }
      },
      {
        "source": "/api/logout",
        "function": {
          "functionId": "logout",
          "region": "asia-east1"
        }
      },
      {
        "source": "/api/lineCallback",
        "function": {
          "functionId": "lineCallback",
          "region": "asia-east1"
        }
      },
      {
        "source": "/api/getVisitSessions",
        "function": {
          "functionId": "getvisitsessions",
          "region": "asia-east1"
        }
      },
      {
        "source": "/api/registerVisit",
        "function": {
          "functionId": "registervisit",
          "region": "asia-east1"
        }
      },
      {
        "source": "/api/seedVisitSessions",
        "function": {
          "functionId": "seedvisitsessions",
          "region": "asia-east1"
        }
      },
      {
        "source": "/api/getUserRegistrations",
        "function": {
          "functionId": "getuserregistrations",
          "region": "asia-east1"
        }
      },
      {
        "source": "/api/cancelRegistration",
        "function": {
          "functionId": "cancelregistration",
          "region": "asia-east1"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "functions",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "singleProjectMode": true
  }
}